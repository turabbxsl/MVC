
@using EntityLayer.Concrete
@model List<Admin>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<br />
<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Kullanici Mail</th>
        <th>Yetki</th>
        <th>Status</th>
        <th>Pasif Yap</th>
        <th>Yetkisini Degistir</th>
 
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <th>@item.AdminID</th>
            <td>@item.AdminUserName</td>
            <td>@item.AdminRole</td>
            <td>Aktif</td>
            <td><a href="/AdminCategory/DeleteCategory/@item.AdminID" class="btn btn-danger">Pasif Yap</a></td>
            <td><a href="/Authoriztion/EditAdmin/@item.AdminID" class="btn btn-warning">Yetkisini Degistir</a></td>
            <td><a href="#" class="btn btn-primary">Basliklar</a></td>
        </tr>
    }


</table>

<a href="/Authoriztion/AddAdmin" class="btn btn-info">Yeni Admin Tanimla</a>

