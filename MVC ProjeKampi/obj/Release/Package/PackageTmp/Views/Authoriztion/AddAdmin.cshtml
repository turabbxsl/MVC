@model EntityLayer.Concrete.Admin

@{
    ViewBag.Title = "AddAdmin";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<h1>Yeni Admin Ekleme Sayfasi</h1>
<br />

@using (Html.BeginForm("AddAdmin", "Authoriztion", FormMethod.Post))
{
<div class="form form-group">

    @Html.Label("Admin Kullanici Adi")
    @Html.TextBoxFor(x => x.AdminUserName, new { @class = "form-control" })
    <br />
    <br />
    @Html.Label("Sifreyi Girin")
    @Html.TextBoxFor(x => x.AdminPassword, new { @class = "form-control" })
    <br />
    @Html.Label("Rolu Secin")
    @Html.TextBoxFor(x => x.AdminRole, new { @class = "form-control" })
    <br />
    <button class="btn btn-primary">Kaydet</button>
</div>
}

