
@{
    Layout = null;
}

<<!doctype html>
<html lang="en">
<head>
    <title>Login</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link href="https://fonts.googleapis.com/css?family=Lato:300,400,700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">

    <link rel="stylesheet" href="~/Mvc Proje Kampı Tema/login-form-19/css/style.css">

</head>
<body>
    <section class="ftco-section">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-md-6 text-center mb-5">
                    <h2 class="heading-section">Admin Giris</h2>
                </div>
            </div>
            <div class="row justify-content-center">
                <div class="col-md-6 col-lg-4">
                    <div class="login-wrap py-5">
                        <div class="img d-flex align-items-center justify-content-center" style="background-image: url('/Mvc Proje Kampı Tema/login-form-19/images/bg.jpg');"></div>
                        <h3 class="text-center mb-0">Hos Geldiniz</h3>
                        <p class="text-center">Sign in by entering the information below</p>
                        @using (Html.BeginForm("Index", "Login", FormMethod.Post))
                        {
                            <div class="form-group">
                                <div class="icon d-flex align-items-center justify-content-center"><span class="fa fa-user"></span></div>
                                <input type="text" class="form-control" name="AdminUserName" placeholder="Kullanici Adi" required>
                            </div>
                            <div class="form-group">
                                <div class="icon d-flex align-items-center justify-content-center"><span class="fa fa-lock"></span></div>
                                <input type="password" name="AdminPassword" class="form-control" placeholder="*******" required>
                            </div>
                            <div class="form-group d-md-flex">
                                <div class="w-100 text-md-right">
                                    <a href="#">Sifremi Unuttum</a>
                                </div>
                            </div>
                            <div class="form-group">
                                <button type="submit" class="btn form-control btn-primary rounded submit px-3">Giris Yap</button>
                            </div>
                        }
                        <div class="w-100 text-center mt-4 text">
                            <a href="#">Ana Sayfaya Don</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <script src="~/Mvc Proje Kampı Tema/login-form-19/js/jquery.min.js"></script>
    <script src="~/Mvc Proje Kampı Tema/login-form-19/js/popper.js"></script>
    <script src="~/Mvc Proje Kampı Tema/login-form-19/js/bootstrap.min.js"></script>
    <script src="~/Mvc Proje Kampı Tema/login-form-19/js/main.js"></script>
</body>
</html>

